    <graphicData>
      <texPath>Things/Pawn/Warcasketlike/WarcasketMarine/WarcasketMarineHelmet</texPath>
    </graphicData>
    <uiIconScale>1.25</uiIconScale>
    <statBases>
      <Mass>5</Mass>
      <Flammability>0</Flammability>
      <ArmorRating_Sharp>1.20</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.65</ArmorRating_Blunt>
      <ArmorRating_Heat>0.74</ArmorRating_Heat>
      <Insulation_Cold>5</Insulation_Cold>
      <Insulation_Heat>2</Insulation_Heat>
      <EquipDelay>4</EquipDelay>
    </statBases>
    <equippedStatOffsets>
	  <MoveSpeed>-0.1</MoveSpeed>
      <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">0.1</SlaveSuppressionOffset>
    </equippedStatOffsets>
    <costList>
      <ComponentIndustrial>1</ComponentIndustrial>
      <Steel>65</Steel>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Warcasketlike/WarcasketMarine/WarcasketMarineHelmet</wornGraphicPath>
      <layers>
        <li>Overhead</li>
		<li>EyeCover</li>
      </layers>
    </apparel>
  </ThingDef>

</Defs>