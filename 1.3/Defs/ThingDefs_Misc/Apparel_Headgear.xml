      <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">0.1</SlaveSuppressionOffset>
    </equippedStatOffsets>
    <costList>
      <ComponentIndustrial>1</ComponentIndustrial>
      <Steel>40</Steel>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Warcasketlike/Warcasket/WarcasketHelmet</wornGraphicPath>
      <layers>
        <li>Overhead</li>
		<li>EyeCover</li>
      </layers>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
    </apparel>
    <thingCategories>
      <li>Headgear</li>
    </thingCategories>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.9,0.9,0.9,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.33,0.33,0.33,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.65,0.65,0.65,1)</only>
        </li>
        <li>
          <weight>6</weight>
          <min>(0.3,0.3,0.3,1)</min>
          <max>(0.5,0.5,0.5,1)</max>
        </li>
      </options>
    </colorGenerator>
    <thingSetMakerTags>
      <li>Warcasket</li>
    </thingSetMakerTags>
