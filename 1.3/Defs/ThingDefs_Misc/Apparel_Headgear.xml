<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="VFEP_WarcasketPartBase">
    <defName>VFEP_WarcasketHelmet_Warcasket</defName>
    <label>warcasket helmet</label>
    <description>Basic warcasket helmet with baseline protection and weight.</description>
    <graphicData>
      <texPath>Things/Pawn/Warcasketlike/Warcasket/WarcasketHelmet</texPath>
    </graphicData>
    <uiIconScale>1.25</uiIconScale>
    <statBases>
      <Mass>5</Mass>
      <Flammability>0</Flammability>
      <ArmorRating_Sharp>1.06</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.55</ArmorRating_Blunt>
      <ArmorRating_Heat>0.64</ArmorRating_Heat>
      <Insulation_Cold>4</Insulation_Cold>
      <Insulation_Heat>2</Insulation_Heat>
      <EquipDelay>4</EquipDelay>
    </statBases>
    <equippedStatOffsets>
	  <MoveSpeed>-0.1</MoveSpeed>
      <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">0.1</SlaveSuppressionOffset>
    </equippedStatOffsets>
    <costList>
      <ComponentIndustrial>1</ComponentIndustrial>
      <Steel>40</Steel>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Warcasketlike/Warcasket/WarcasketHelmet</wornGraphicPath>
      <layers>
        <li>Overhead</li>
		<li>EyeCover</li>
      </layers>
    </apparel>
  </ThingDef>
  
  <ThingDef ParentName="VFEP_WarcasketPartBase">
    <defName>VFEP_WarcasketHelmet_Marine</defName>
    <label>marine warcasket helmet</label>
