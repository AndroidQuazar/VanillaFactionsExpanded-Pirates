<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <VFEPirates.WarcasketDef Name="VFEP_WarcasketPartBase" Abstract="True">
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <thingClass>Apparel</thingClass>
    <category>Item</category>
    <drawerType>MapMeshOnly</drawerType>
    <selectable>True</selectable>
    <pathCost>14</pathCost>
    <useHitPoints>False</useHitPoints>
    <techLevel>Industrial</techLevel>
    <drawGUIOverlay>true</drawGUIOverlay>
	<destroyOnDrop>true</destroyOnDrop>
    <statBases>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>0</DeteriorationRate>
      <Beauty>-3</Beauty>
    </statBases>
    <apparel>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
    </apparel>
	<generateCommonality>0</generateCommonality>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <burnableByRecipe>false</burnableByRecipe>
    <smeltable>false</smeltable>
    <thingSetMakerTags>
      <li>Warcasket</li> <!-- Won't be actually used anywhere -->
    </thingSetMakerTags>
    <tradeTags>
      <li>Warcasket</li> <!-- Won't be actually used anywhere -->
    </tradeTags>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
      <li>
        <compClass>CompColorable</compClass>
      </li>
    </comps>
	<modExtensions>
		<li Class="VFEPirates.ApparelExtension">
			<nonSpawnable>true</nonSpawnable>
			<hiddenFromDatabases>true</hiddenFromDatabases>
			<isWarCasketApparel>true</isWarCasketApparel>
		</li>
	</modExtensions>
  </VFEPirates.WarcasketDef>
  
  <VFEPirates.WarcasketDef ParentName="VFEP_WarcasketPartBase" Name="VFEP_WarcasketArmorBase" Abstract="True">
	<thingClass>VFEPirates.Apparel_WarcasketArmor</thingClass>
	<modExtensions>
		<li Class="VFECore.ApparelDrawPosExtension">
			<shellPosDrawSettings>
				<drawPosNorthOffset>(0, 0.1, 0)</drawPosNorthOffset>
				<drawPosSouthOffset>(0, 0, 0)</drawPosSouthOffset>
				<drawPosWestOffset>(-0.03, 0, 0)</drawPosWestOffset>
				<drawPosEastOffset>(0.03, 0, 0)</drawPosEastOffset>
				<!--
				<drawNorthSize>(2, 2)</drawNorthSize>
				<drawSouthSize>(2, 2)</drawSouthSize>
				<drawWestSize>(2, 2)</drawWestSize>
				<drawEastSize>(2, 2)</drawEastSize>-->
			</shellPosDrawSettings>
			<isUnifiedApparel>true</isUnifiedApparel>
		</li>
	</modExtensions>
  </VFEPirates.WarcasketDef>
  
  <VFEPirates.WarcasketDef ParentName="VFEP_WarcasketPartBase">
    <defName>VFEP_Warcasket_Bodysuit</defName>
    <label>warcasket bodysuit</label>
    <description>Basic bodysuit that serves as a base for warcasket shells.</description>
    <graphicData>
      <texPath>Things/Pawn/Warcasketlike/WarcasketBodysuit/WarcasketBodysuit</texPath>
    </graphicData>
    <apparel>
      <wornGraphicPath>Things/Pawn/Warcasketlike/WarcasketBodysuit/WarcasketBodysuit</wornGraphicPath>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
    </apparel>
  </VFEPirates.WarcasketDef>
  
  <!-- Basic warcasket -->

  <VFEPirates.WarcasketDef ParentName="VFEP_WarcasketArmorBase">
    <defName>VFEP_Warcasket_Warcasket</defName>
    <label>warcasket</label>
    <description>Basic warcasket shell with baseline protection and weight.</description>
    <graphicData>
      <texPath>Things/Pawn/Warcasketlike/Warcasket/Warcasket</texPath>
    </graphicData>
    <statBases>
      <Mass>50</Mass>
      <Flammability>0</Flammability>
      <ArmorRating_Sharp>1.06</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.55</ArmorRating_Blunt>
      <ArmorRating_Heat>0.64</ArmorRating_Heat>
      <Insulation_Cold>20</Insulation_Cold>
      <Insulation_Heat>7</Insulation_Heat>
      <EquipDelay>14</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.5</MoveSpeed>
      <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">0.3</SlaveSuppressionOffset>
    </equippedStatOffsets>
    <costList>
      <ComponentIndustrial>2</ComponentIndustrial>
      <Steel>80</Steel>
      <Uranium>20</Uranium>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Legs</li>
		<li>Feet</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Warcasketlike/Warcasket/Warcasket</wornGraphicPath>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
    </apparel>
  </VFEPirates.WarcasketDef>
  
  <VFEPirates.WarcasketDef ParentName="VFEP_WarcasketPartBase" Name="VFEP_WarcasketShoulderPadBase" Abstract="True">
	<modExtensions>
		<li Class="VFECore.ApparelDrawPosExtension">
			<shellPosDrawSettings>
				<drawPosNorthOffset>(0, 0.2, 0)</drawPosNorthOffset>
				<drawPosSouthOffset>(0, 0.1, 0)</drawPosSouthOffset>
				<drawPosWestOffset>(0, 0.1, 0)</drawPosWestOffset>
				<drawPosEastOffset>(0, 0.1, 0)</drawPosEastOffset>
				<!--
				<drawNorthSize>(2, 2)</drawNorthSize>
				<drawSouthSize>(2, 2)</drawSouthSize>
				<drawWestSize>(2, 2)</drawWestSize>
				<drawEastSize>(2, 2)</drawEastSize> -->
			</shellPosDrawSettings>
			<isUnifiedApparel>true</isUnifiedApparel>
		</li>
	</modExtensions>
  </VFEPirates.WarcasketDef>
  
