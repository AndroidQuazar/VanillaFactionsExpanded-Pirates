      <Insulation_Cold>6</Insulation_Cold>
      <Insulation_Heat>2</Insulation_Heat>
      <EquipDelay>14</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.2</MoveSpeed>
